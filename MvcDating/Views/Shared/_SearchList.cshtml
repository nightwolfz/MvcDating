@using MvcDating.Helpers
@using MvcDating.Models
@model MvcDating.Models.SearchResultView

<style>
    .photo-counter {
        position: absolute;
        margin-top: -24px;
        margin-left: 6px;
        z-index: 100000;
        padding: 3px 4px 2px 24px;
        color: #fff;
        text-decoration: none;
        font: 700 .82em/1.3em Arial,sans-serif;
        -ms-border-radius: 2px;
        border-radius: 2px;
        -ms-text-shadow: 0 -1px rgba(0,0,0,.5);
        text-shadow: 0 -1px rgba(0,0,0,.5);
        background: url(data:image/png;base64,) no-repeat 0 0;
    }
</style>


<div class="visitorWrapper">
    <div class="visitorPicture">
        @Html.DisplayAvatar(Model.UserName, "~/Uploads/" + Model.Thumb)
        <i class="photo-counter bl">@Model.PictureCount</i>
        
    </div>
    <div class="visitorDetails">
        @Html.Partial("_UserDetails", Model)
    </div>
</div>