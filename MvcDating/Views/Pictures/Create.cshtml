@model MvcDating.Models.Picture

@{
    ViewBag.Title = "Create";
}

<h2>Chose a picture to upload.</h2>

@using (Html.BeginForm("Create", "Pictures", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
    @Html.AntiForgeryToken()
    <div>Please select some files</div>
    <input name="imageData" type="file" multiple>
    <input type="submit" />                     
}

